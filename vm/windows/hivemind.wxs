<?xml version="1.0"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
    <Product
            Id="*"
            Language="1033"
            Manufacturer="https://github.com/antonpaquin/"
            Name="Hivemind"
            Version="0.2.0">
        <Package Compressed="yes" Description="Last Mile Neural Network Inference"/>
        <Media Id="1" Cabinet="product.cab" EmbedCab="yes"/>
        <Directory Id="TARGETDIR" Name="SourceDir">
            <Directory Id="DesktopFolder" Name="Desktop"/>
            <Directory Id="ProgramFilesFolder">
                <Directory Id="INSTALLDIR" Name="Hivemind">
                    <Directory Id="SRCDIR" Name="hivemind-win10"/>
                </Directory>
            </Directory>
        </Directory>
        <Icon Id="HivemindIcon" SourceFile="hivemind-win10/logo_256.ico"/>
        <Feature Id="HivemindFeat">
            <ComponentGroupRef Id="HivemindCG"/>
            <Component
                    Id="DesktopShortcutComponent"
                    Directory="DesktopFolder"
                    Guid="266142cb-85e0-48c9-a328-108b3bafc3f9">
                <Shortcut
                        Id="DesktopShortcut"
                        Name="Hivemind"
                        Icon="HivemindIcon"
                        WorkingDirectory="SRCDIR"
                        Target="[SRCDIR]/hivemind-ui.exe"/>
                <RegistryValue
                        Root="HKCU"
                        Key="Software/Hivemind"
                        Name="installed"
                        Type="integer"
                        Value="1"
                        KeyPath="yes"/>
            </Component>
        </Feature>
    </Product>
</Wix>